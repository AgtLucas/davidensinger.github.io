# davidensinger.com Termfile
before { run 'cd ~/Development/davidensinger.com' }

tab :name => 'Jekyll' do
  run 'rvm 2.0.0'
  run 'jekyll serve -w'
end

tab :name => 'Sass' do
  run 'sass --style compressed --watch assets/scss/styles.scss:assets/css/styles.min.css'
end

tab :name => 'Git' do
  run 'git status'
end

# Open project directory in Finder
run 'open .'

# Open project in Sublime Text 2
run 'sublime .'

# Open website in browser
run 'open http://0.0.0.0:4000'

# Close tab
run 'exit'